<UserControl
    x:Class="Fleccy.StoragePage"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Fleccy.ViewModels"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="using:FluentAvalonia.UI.Controls"
    xmlns:vm="clr-namespace:Fleccy.ViewModels"
    Margin="12"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:CompileBindings="True"
    x:DataType="vm:StorageViewModel"
    mc:Ignorable="d">

    <Design.DataContext>
        <vm:StorageViewModel />
    </Design.DataContext>

    <TreeView ItemsSource="{Binding DriveNodes}">
        <TreeView.ItemTemplate>
            <TreeDataTemplate x:DataType="local:DriveTreeNode" ItemsSource="{Binding Children}">
                <TextBlock Text="{Binding Name}" />
            </TreeDataTemplate>
        </TreeView.ItemTemplate>
    </TreeView>
</UserControl>
